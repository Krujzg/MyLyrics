<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. <item name="android:windowNoTitle">true</item> -->
        <item name="colorPrimary">@color/black</item>
        <item name="logo">@mipmap/ic_launcher</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="Widget.Actionbar" parent="Theme.AppCompat">
        <item name="colorPrimary">@color/black</item>
    </style>

    <style name="Widget.Actionbar.Logo">
        <item name="colorPrimary">@color/black</item>
        <item name="icon">@mipmap/ic_launcher</item>
    </style>

    <style name="HiddenTitleTheme" parent="AppTheme">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>

    <style name="CustomDialogTheme">
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="TextIntroSlidersUp">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">30sp</item>
    </style>

    <style name="ImageViewSliders">
        <item name="android:layout_width">200dp</item>
        <item name="android:layout_height">400dp</item>
        <item name="android:layout_marginBottom">24dp</item>
        <item name="android:contentDescription">@null</item>
    </style>

    <style name="ImageViewSlidersFor2inarowPicture">
        <item name="android:layout_width">125dp</item>
        <item name="android:layout_height">350dp</item>
        <item name="android:layout_marginBottom">24dp</item>
        <item name="android:contentDescription">@null</item>
    </style>

    <style name="ImageViewSlidersFor3inrowPictures">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">175dp</item>
        <item name="android:layout_marginBottom">24dp</item>
        <item name="android:contentDescription">@null</item>
    </style>

    <style name="ImageViewSlidersFor3inrowPicturesWith1column">
        <item name="android:layout_width">110dp</item>
        <item name="android:layout_height">200dp</item>
        <item name="android:layout_marginBottom">24dp</item>
        <item name="android:contentDescription">@null</item>
    </style>

    <style name="TextIntroSlidersDown">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

</resources>

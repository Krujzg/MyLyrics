<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. <item name="android:windowNoTitle">true</item> -->
        <item name="colorPrimary">@color/black</item>
        <item name="logo">@mipmap/ic_launcher</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="Widget.Actionbar" parent="Theme.AppCompat">
        <item name="colorPrimary">@color/black</item>
    </style>

    <style name="Widget.Actionbar.Logo">
        <item name="colorPrimary">@color/black</item>
        <item name="icon">@mipmap/ic_launcher</item>
    </style>

    <style name="HiddenTitleTheme" parent="AppTheme">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>

    <style name="CustomDialogTheme">
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

</resources>

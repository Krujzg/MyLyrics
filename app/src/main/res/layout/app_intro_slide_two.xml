<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/slide_two">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:gravity="top|center_horizontal"
        android:orientation="vertical"
        tools:ignore="UselessParent">
        <TextView
            style="@style/TextIntroSlidersUp"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/bahnschrift"
            android:text="@string/slide_two_top_text" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        tools:ignore="UselessParent">

        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:rowCount="2"
            android:columnCount="3">

            <ImageView
                style="@style/ImageViewSlidersFor3inrowPictures"
                android:contentDescription="@null"
                android:src="@drawable/lyrics_one"
                android:layout_row="0"
                android:layout_column="0"/>

            <ImageView
                style="@style/ImageViewSlidersFor3inrowPictures"
                android:contentDescription="@null"
                android:src="@drawable/lyrics_two"
                android:layout_row="0"
                android:layout_column="1"/>

            <ImageView
                style="@style/ImageViewSlidersFor3inrowPictures"
                android:contentDescription="@null"
                android:src="@drawable/lyrics_three"
                android:layout_row="0"
                android:layout_column="2"/>

            <ImageView
                style="@style/ImageViewSlidersFor3inrowPictures"
                android:contentDescription="@null"
                android:src="@drawable/lyrics_four"
                android:layout_row="1"
                android:layout_column="0"/>

            <ImageView
                style="@style/ImageViewSlidersFor3inrowPictures"
                android:contentDescription="@null"
                android:src="@drawable/lyrics_five"
                android:layout_row="1"
                android:layout_column="1"/>

        </GridLayout>

        <TextView
            style="@style/TextIntroSlidersDown"
            android:fontFamily="@font/bahnschrift"
            android:text="@string/slide_three_down_text" />
    </LinearLayout>


</RelativeLayout>
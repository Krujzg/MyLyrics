<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <data>

        <variable
            name="lyricsItemModel"
            type="com.oe.nik.krujzgergely.ui.lyricsItem.LyricsItemActivityViewModel" />
    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        tools:ignore="RtlHardcoded"
        android:background="@color/black">
            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:columnCount="2"
                android:rowCount="4"
                >

                <TextView
                    android:id="@+id/performer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="0"
                    android:layout_column="0"
                    android:paddingLeft="10dp"
                    android:paddingTop="10dp"
                    android:paddingRight="10dp"
                    android:text="@{lyricsItemModel.displayedPerformer}"
                    android:textIsSelectable="true"
                    android:textSize="@dimen/ActivityLyricsItemTextSize"
                    android:textStyle="bold"
                    android:textColor="@color/grey"/>

                <TextView
                    android:id="@+id/title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="1"
                    android:layout_column="0"
                    android:paddingLeft="10dp"
                    android:paddingTop="10dp"
                    android:paddingRight="10dp"
                    android:text="@{lyricsItemModel.displayedTitle}"
                    android:textIsSelectable="true"
                    android:textSize="@dimen/displayedTitleTextSize"
                    android:textColor="@color/grey"/>

                <Button
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:id="@+id/youtubePlayButton"
                    android:drawableLeft="@drawable/youtubeicon48px"
                    android:text="Play on Youtube app "
                    android:layout_marginStart="10dp"
                    android:layout_row="2"
                    android:layout_column="0"
                    android:padding="1dp"
                    android:textAllCaps="false"
                    android:visibility="@{lyricsItemModel.isYoutubeButtonVisible}"
                    android:background="@drawable/youtube_play_button"
                    />

                <Button
                    android:id="@+id/spotifyPlayButton"
                    android:layout_width="187dp"
                    android:layout_height="wrap_content"
                    android:layout_row="2"
                    android:layout_column="0"
                    android:layout_marginStart="10dp"
                    android:background="@drawable/spotify_button"
                    android:drawableLeft="@drawable/baseline_play_arrow_white_36"
                    android:padding="4dp"
                    android:text=" Play on Spotify app "
                    android:textAllCaps="false"
                    android:visibility="@{lyricsItemModel.isSpotifyButtonVisible}"
                    android:onClick="@{() -> lyricsItemModel.playSpotifyLink()}"/>

                <TextView
                    android:id="@+id/lyrics_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="3"
                    android:layout_column="0"
                    android:paddingLeft="10dp"
                    android:paddingTop="10dp"
                    android:paddingRight="10dp"
                    android:layout_marginBottom="10dp"
                    android:text="@{lyricsItemModel.displayedLyricsText}"
                    android:textSize="@dimen/lyricsTextSize"
                    android:textColor="@color/grey"
                    />

            </GridLayout>
    </ScrollView>
</layout>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <data>

        <variable
            name="lyricsItemModel"
            type="com.oe.nik.krujzgergely.ui.lyricsItem.LyricsItemActivityViewModel" />
    </data>

    <ScrollView xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        tools:ignore="RtlHardcoded"
        xmlns:app="http://schemas.android.com/apk/res-auto">

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:columnCount="1"
                android:rowCount="4">

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/floating_action_button_delete"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_gravity="bottom|top|right"
                    android:layout_marginBottom="10dp"
                    android:layout_marginRight="10dp"
                    android:backgroundTint="@color/transparent"
                    android:src="@drawable/delete"
                    app:borderWidth="0dp"
                    app:fabSize="normal"
                    android:onClick="@{()-> lyricsItemModel.deleteLyricsFromLocalDb()}"
                    />
                <TextView
                    android:id="@+id/performer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="0"
                    android:layout_column="0"
                    android:paddingLeft="10dp"
                    android:paddingTop="10dp"
                    android:paddingRight="10dp"
                    android:text="@{lyricsItemModel.displayedPerformer}"
                    android:textIsSelectable="true"
                    android:textSize="@dimen/ActivityLyricsItemTextSize"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="1"
                    android:layout_column="0"
                    android:paddingLeft="10dp"
                    android:paddingTop="10dp"
                    android:paddingRight="10dp"
                    android:text="@{lyricsItemModel.displayedTitle}"
                    android:textIsSelectable="true"
                    android:textSize="@dimen/ActivityLyricsItemTextSize" />

                <TextView
                    android:id="@+id/youtubelink"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="2"
                    android:layout_column="0"
                    android:paddingLeft="10dp"
                    android:paddingTop="10dp"
                    android:paddingRight="10dp"
                    android:textIsSelectable="true"
                    android:text="@{lyricsItemModel.displayedyoutubelink}"
                    android:textSize="@dimen/ActivityLyricsItemTextSize" />

                <TextView
                    android:id="@+id/lyrics_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="3"
                    android:layout_column="0"
                    android:paddingLeft="10dp"
                    android:paddingTop="10dp"
                    android:paddingRight="10dp"
                    android:layout_marginBottom="10dp"
                    android:text="@{lyricsItemModel.displayedLyrics_Text}"
                    android:textSize="@dimen/ActivityLyricsLyricsTextSize" />

            </GridLayout>
    </ScrollView>
</layout>
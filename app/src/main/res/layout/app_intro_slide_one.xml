<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/slide_one">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:gravity="top|center_horizontal"
        android:orientation="vertical"
        tools:ignore="UselessParent">
        <TextView
            style="@style/TextIntroSlidersUp"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/bahnschrift"
            android:text="@string/slide_one_top_text" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        tools:ignore="UselessParent">


        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:rowCount="1"
            android:columnCount="2">

            <ImageView
                style="@style/ImageViewSlidersFor2inarowPicture"
                android:contentDescription="@null"
                android:src="@drawable/login_page_google_click"
                android:layout_row="0"
                android:layout_column="0"/>

            <ImageView
                style="@style/ImageViewSlidersFor2inarowPicture"
                android:contentDescription="@null"
                android:src="@drawable/login_page_spotify_click"
                android:layout_row="0"
                android:layout_column="1"
                android:layout_marginLeft="10dp"/>

        </GridLayout>

        <TextView
            style="@style/TextIntroSlidersDown"
            android:fontFamily="@font/bahnschrift"
            android:text="@string/slide_one_down_text" />
    </LinearLayout>


</RelativeLayout>
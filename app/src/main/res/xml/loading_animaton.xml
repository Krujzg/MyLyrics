<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <Transition
        app:constraintSetStart="@+id/start"
        app:constraintSetEnd="@+id/end"
        app:duration="2500">

        <KeyFrameSet>
            <KeyAttribute
                app:framePosition="0"
                app:motionTarget="@id/musicNoteLoadingImageView">
                <CustomAttribute
                    app:attributeName="colorFilter"
                    app:customColorValue="#FFFFFF" />
            </KeyAttribute>

            <KeyAttribute
                app:framePosition="100"
                app:motionTarget="@id/musicNoteLoadingImageView">
                <CustomAttribute
                    app:attributeName="colorFilter"
                    app:customColorValue="#F23B5F" />
            </KeyAttribute>
        </KeyFrameSet>
    </Transition>

    <ConstraintSet android:id="@+id/start">
        <Constraint android:id="@id/musicNoteLoadingImageView"/>
        <Constraint
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:id="@+id/loadingProgressBar"
            app:layout_constraintTop_toBottomOf="@+id/musicNoteLoadingImageView"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintVertical_bias="0.547"
            android:layout_marginLeft="0dp"
            android:layout_marginStart="0dp"
            app:layout_constraintEnd_toEndOf="parent" />
    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">
        <Constraint android:id="@id/musicNoteLoadingImageView" />
    </ConstraintSet>
    
</MotionScene>
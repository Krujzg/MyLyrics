<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.oe.nik.krujzgergely">

    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Widget.Actionbar">
        <activity
            android:name=".ui.launcher.LauncherActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.oe.nik.krujzgergely.ui.main.MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/HiddenTitleTheme"
            android:icon="@mipmap/ic_launcher">
        </activity>
        <activity android:name="com.oe.nik.krujzgergely.ui.lyrics.LyricsActivity" android:label="@string/MenuLabel"/>
        <activity android:name="com.oe.nik.krujzgergely.ui.lyricsItem.LyricsItemActivity" android:label="@string/LyricsLabel" />
        <activity android:name="com.oe.nik.krujzgergely.ui.createlyricsitem.CreateLyricsActivity" android:label="@string/CreateLabel"/>
        <activity android:name="com.oe.nik.krujzgergely.ui.updatelyricsitem.UpdateLyricsItemActivity" android:label="@string/UpdateLabel"/>
        <activity android:name="com.oe.nik.krujzgergely.ui.accountInfo.AccountInfoActivity" android:label="@string/account_info"/>
        <activity android:name="com.oe.nik.krujzgergely.ui.appintro.MyLyricsAppIntro"  android:screenOrientation="portrait" android:theme="@style/AppTheme.NoActionBar"/>
    </application>
</manifest>